// Ejemplo del operador ?
class Ternario {
public static void main(String args[]) {
int i. k;
i = 10;
k = i < 0 ? -i : i; // se obtiene el valor absoluto de i
System.out.print("Va1or absoluto de ");
System.out.println(i + " es " + k);
i = -10;
k = i < 0 ? -i : i; // se obtiene el valor absoluto de i
System.out.print("Valor absoluto de" );
System.out.println(i + " es " + k);
}
}

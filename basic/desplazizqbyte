// Desplazamiento a la izquierda en un valor byte.
class DesplazarByte {
  public static void main(String args[]) { 
          byte a = 64, b;
          int i;
          i = a << 2;
          b = (byte) (a << 2);
         System.out.println("Valor original de a: " + a);
         System.out.println("i y b: " + i + " " + b);
   }
}
